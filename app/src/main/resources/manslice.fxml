<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>

<GridPane
    fx:controller="app.manslice.MansliceController"
    xmlns:fx="http://javafx.com/fxml"
    alignment="center"
    hgap="10"
    vgap="10"
    styleClass="root">
    <padding>
        <Insets
            top="25"
            right="25"
            bottom="10"
            left="25"
        />
    </padding>
    <VBox
        alignment="BOTTOM_CENTER"
        spacing="10">
        <HBox
            fx:id="mainContainer"
            alignment="CENTER"
            spacing="10">
            <Button
                fx:id="sliceButton"
                text="slice"
                onAction="#handleButtonAction"
            />
            <Button
                fx:id="flipButton"
                text="flip"
                onAction="#handleButtonAction"
            />
            <Button
                fx:id="patternButton"
                text="pattern"
                onAction="#handleButtonAction"
            />
            <Button
                fx:id="midiButton"
                text="midi"
                onAction="#handleButtonAction"
            />
        </HBox>
    </VBox>
    <VBox
        spacing="10"
        alignment="CENTER"
        visible="true">
        <HBox 
            fx:id="manSlicesContainer" 
            spacing="10" 
            alignment="CENTER" 
            visible="false"
        />
        <HBox
            fx:id="sliceContainer"
            spacing="10"
            alignment="CENTER"
            visible="false">
            <Button
                fx:id="addSliceButton"
                text="addSlice"
                onAction="#handleSliceButtons">
            </Button>
            <Button
                fx:id="removeSliceButton"
                text="removeSlice"
                onAction="#handleSliceButtons">
            </Button>
        </HBox>
    </VBox>
    <VBox
        spacing="10"
        alignment="CENTER"
        visible="true">
        <HBox 
            fx:id="manFlipsContainer" 
            spacing="10" 
            alignment="CENTER" 
            visible="false"
        />
        <HBox
            fx:id="flipContainer"
            spacing="10"
            alignment="CENTER"
            visible="false">
            <Button
                fx:id="addFlipButton"
                text="addFlip"
                onAction="#handleFlipButtons">
            </Button>
            <Button
                fx:id="removeFlipButton"
                text="removeFlip"
                onAction="#handleFlipButtons">
            </Button>
        </HBox>
    </VBox>
    <VBox
        spacing="10"
        alignment="CENTER"
        visible="true">
        <HBox 
            fx:id="manPatternContainer" 
            spacing="10" 
            alignment="CENTER" 
            visible="false"
        />
        <HBox
            fx:id="patternContainer"
            spacing="10"
            alignment="CENTER"
            visible="false">
            <Button
                fx:id="setPatternButton"
                text="setPattern"
                onAction="#handlePatternButtons">
            </Button>
        </HBox>
    </VBox>
    <VBox
        spacing="10"
        alignment="CENTER"
        visible="true">
        <HBox
            fx:id="midiContainer"
            spacing="10"
            alignment="CENTER"
            visible="false">
            <Button
                fx:id="playButton"
                text="play"
                onAction="#handleMidiButtons">
            </Button>
            <Button
                fx:id="stopButton"
                text="stop"
                onAction="#handleMidiButtons">
            </Button>
        </HBox>
    </VBox>
    <VBox
        fx:id="inputContainer"
        spacing="10"
        alignment="BOTTOM_CENTER"
        visible="false">
        <Label
            text="Enter input: " />
        <TextField
            fx:id="inputField"
            promptText="Type something..."
            onKeyPressed="#handleInput" />
    </VBox>
    <gridLinesVisible>
        false
    </gridLinesVisible>
    <stylesheets>
        <URL value="@manslice.css"
        />
    </stylesheets>
</GridPane>
